<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_header %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="description" content="<%= @meta_data %>">
    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "shared/blog_nav" %>
    <br>
    <main role="main" class="container">
      <div class="row">
        <div class="col-md-8 blog-main">
          <h1 class="pb-4 mb-4 font-italic border-bottom">
            From the Firehose
          </h1>
          <%#= header_links("") %>
          <%= yield %>
        </div>

        <!-- side bar start -->
        <aside class="col-md-4 blog-sidebar">
          <div class="p-4">
            <h4 class="font-italic">Archives</h4>
            <ol class="list-unstyled mb-0">
              <li><a href="#">March 2014</a></li>
              <li><a href="#">February 2014</a></li>
              <li><a href="#">January 2014</a></li>
              <li><a href="#">December 2013</a></li>
              <li><a href="#">November 2013</a></li>
              <li><a href="#">October 2013</a></li>
              <li><a href="#">April 2013</a></li>
            </ol>
          </div>

          <div class="p-4">
            <h4 class="font-italic">Elsewhere</h4>
            <ol class="list-unstyled">
              <li><a href="#">GitHub</a></li>
              <li><a href="#">Twitter</a></li>
              <li><a href="#">Facebook</a></li>
            </ol>
          </div>
        </aside>
        <!-- side bar end -->
      </div>
    </main>


    <!-- footer start -->
    <%= visitor_message("blog") %>
    <footer class="blog-footer">
      <p><%= render "shared/application_copyright" %></p>
    </footer>
    <!-- footer end -->
  </body>
</html>
