<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_header %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="<%= @meta_data %>">
    <%= stylesheet_link_tag 'portfolios', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "shared/portfolio_header" %>
    <main role="main">  
      <%= render "shared/portfolio_heading" %>
      <div class="album py-5 bg-light">
        <div class="container">
          <%= yield %>
        </div>
      </div>
    </main>
    <br>
    <!-- footer start -->
    <%= render "shared/portfolio_footer" %>
    <!-- footer ebd -->
    <%= visitor_message("portfolio") %>
  </body>
</html>
