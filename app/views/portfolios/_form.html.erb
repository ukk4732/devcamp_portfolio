<%= form_for(portfolio) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_area :subtitle, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control", rows: 8 %>
      </div>
    </div>
  </div>
  <h3>Technologies Used</h3>
  <hr>
  <div>
    <%= form.fields_for :technologies do |tech| %>
    <div class="form-group">
      <%= tech.label :name %>
      <%= tech.text_field :name, class: "form-control" %>
    </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "Save Portfolio", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
