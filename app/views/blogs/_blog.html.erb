<div class="blog-post">
  <h3 class="blog-post-title"><%= link_to blog.title.capitalize, blog %></h3>
  <p class="blog-post-meta">Post published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago.</p>
  <% if logged_in?(:site_admin) %>
    <p>
      <%= link_to blog.status.capitalize, toggle_status_blog_path(blog), method: :post %> /
      <%= link_to 'Edit', edit_blog_path(blog) %> / 
      <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
  <% end %>
  <p><%= blog.body %></p>
</div>